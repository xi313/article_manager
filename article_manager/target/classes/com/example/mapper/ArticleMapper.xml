<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ArticleMapper">
    <!--动态sql-->
    <select id = "list" resultType="com.example.pojo.Article">
        select * from article
        <where>
            <if test="categoryId!=null">
                category_id in
                <foreach item="id" index="index" collection="categoryId" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
            <if test="state!=null">
                and state=#{state}
            </if>
            <if test="userId!=null">
                and create_user=#{userId}
            </if>
            <if test="date!=null">
                and to_days(update_time)=to_days(#{date})
            </if>
            <if test="titleKeyword!=null and titleKeyword!=''">
                and title like "%"#{titleKeyword}"%"
            </if>
            <if test="contentKeyword!=null and contentKeyword!='' ">
                and content like "%"#{contentKeyword}"%"
            </if>
        </where>
    </select>
</mapper>